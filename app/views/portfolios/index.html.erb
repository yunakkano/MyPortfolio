<h1>Portfolio items</h1>
<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
    <p><%= link_to item.title, portfolio_show_path(item) %></p>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <%= image_tag item.thumb_image if !item.thumb_image.nil? %>
    <%= link_to "Edit", edit_portfolio_path(item.id) %>
    <%= link_to "Delete Portfolio Item", portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>